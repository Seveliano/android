<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activitySplash_imgLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/img_activitysplash_background"
        android:contentDescription="@string/activity_splash_background"/>

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/activitySplash_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="45dp"

        app:progress_unreached_color="#CCCCCC"
        app:progress_reached_color="#3498DB"

        app:progress_unreached_bar_height="2dp"
        app:progress_reached_bar_height="4dp"

        app:progress_text_size="18sp"
        app:progress_text_color="#3498DB"
        app:progress_text_offset="1dp"
        app:progress_text_visibility="visible"

        app:progress_max="100"
        app:progress_current="0"/>

</RelativeLayout>